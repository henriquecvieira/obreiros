{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "semi": "error",
    "no-console": "warn",
    "import/prefer-default-export": "error",
    "no-underscore-dangle": [
      "off"
    ],
    "linebreak-style": ["off"
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-await-in-loop": 0,
    "no-restricted-syntax": "off",
    "no-unused-expressions": "off",
    "radix": "off",
    "vars-on-top": "off"
  }
}
